{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./dist",
    "baseUrl": "./src",
    "sourceMap": true,
    "paths": {
      "@base": ["../"],
      "@controller/*": ["controller/*"],
      "@repository/*": ["repository/*"],
      "@middleware/*": ["middleware/*"],
      "@services/*": ["services/*"],
      "@models/*": ["models/*"],
      "@routes/*": ["routes/*"],
      "@test/*": ["test/*"]
    }
  },
  "include": ["src/**/*"]
}
